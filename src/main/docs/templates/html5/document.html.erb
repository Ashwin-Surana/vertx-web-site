<%#encoding:UTF-8%>---
template: page.html
title: <%= doctitle(:sanitize => true) || (attr 'untitled-label') %>
heading: <%= doctitle(:sanitize => true) || (attr 'untitled-label') %>
stylesheet: docs.css
---

<div id="header" class="container">
  <h1><%= doctitle(:sanitize => true) || (attr 'untitled-label') %></h1>
  <div id="toc" class="<%= attr 'toc-class', 'toc' %>">
    <div id="toctitle"><%= attr 'toc-title' %></div>
    <%= converter.convert self, 'outline' %>
  </div>
</div>

<div id="content" class="container">
  <%= content %>
</div>

<% unless !footnotes? || attr?(:nofootnotes) %>
  <div id="footnotes">
  <hr>
  <% footnotes.each do |fn| %>
    <div class="footnote" id="_footnote_<%= fn.index %>">
      <a href="#_footnoteref_<%= fn.index %>"><%= fn.index %></a>. <%= fn.text %>
    </div>
  <% end %>
</div>
<% end %>

<% unless nofooter %>
  <div id="footer" class="container">
    <div id="footer-text">
      <% if attr? :revnumber %>
        <%= %(#{attr 'version-label'} #{attr :revnumber}) %><br>
      <% end
        if attr? 'last-update-label' %>
        <%= %(#{attr 'last-update-label'} #{attr :docdatetime}) %>
      <% end %>
      <%= (docinfo_content = (docinfo :footer)).empty? ? nil : %(#{docinfo_content}) %>
    </div>
  </div>
<% end %>